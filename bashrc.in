## 
## SSH jankiness for ssh-agent forwarding
##
sssh () {
    HOST=`hname`
    . ~/.tmp/$HOST.ssh-agent-vars;
    if [ "x$1" != "x" ]; then
        ssh $@
    fi
}

sshsetup () {
    IDS="$HOME/.ssh/aarp_rsa"
    HOST=`hname`
    killall ssh-agent
	ssh-agent -t 36000 > ~/.tmp/$HOST.ssh-agent-vars;
	. ~/.tmp/$HOST.ssh-agent-vars;
	ssh-add
    for ID in $IDS; do
        if [ -f $ID ]; then
            echo "Adding ssh id $ID "
            ssh-add $ID 
        fi
    done
    sssh
}

sshkill () {
    ps -c | grep ssh | awk '{print $1}' | xargs kill;
}

