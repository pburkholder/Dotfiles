# Set Xterm title:  http://tldp.org/HOWTO/Xterm-Title-4.html#ss4.3
case "$TERM" in
    screen)
        PROMPT_COMMAND='echo -ne "\033k$HOSTNAME\033\\"'
        ;;
    xterm)
        PROMPT_COMMAND='echo -ne "\033]0;${USER}@${HOSTNAME}: ${PWD}\007"'
        ;;
    *)
        PROMPT_COMMAND='echo -ne "\033]0;${USER}@${HOSTNAME}: ${PWD}\007"'
        ;;
esac

# FUNCTIONS:
hname () {
    case `uname -o` in
        Cygwin) hostname;;
        *)      hostname -s;;
    esac
}

